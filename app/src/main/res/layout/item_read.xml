<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="前任测评"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/text_read_type"
        android:textSize="20sp"
        android:id="@+id/text_read_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="作者"
        android:layout_marginTop="7dp"
        android:textSize="15sp"
        android:id="@+id/text_read_name"
        android:layout_below="@id/text_read_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="内容"
        android:layout_marginTop="7dp"
        android:textSize="15sp"
        android:id="@+id/text_read_word"
        android:layout_below="@id/text_read_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="类型"
        android:gravity="center"
        android:textSize="15sp"
        android:background="@drawable/read_shape"
        android:textColor="@color/colorPrimary"
        android:id="@id/text_read_type"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@id/text_read_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>